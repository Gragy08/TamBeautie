                            .countdown-label Day
                        .countdown-item
                            .countdown-number 15
                            .countdown-label Hours
                        .countdown-item
                            .countdown-number 54
                            .countdown-label Minutes
                        .countdown-item
                            .countdown-number 31
                            .countdown-label Seconds
                .left 
                    .beauty-image
                        img(src="/assets/images/section5-img2.jpg", alt="Beauty Center")

    section.section6
